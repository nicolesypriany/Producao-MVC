@model Producao_MVC.Responses.MateriaPrimaResponse

@{
    ViewData["Title"] = "Editar Matéria-Prima";
}

<div class="text-center">

    <h1 class="display-4">Editar Matéria-Prima</h1>

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["MensagemErro"]
        </div>
    }
</div>

<form asp-controller="MateriaPrima" asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome da matéria-prima">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label for="medidas">Fornecedor</label>
        <input type="text" asp-for="Fornecedor" class="form-control" placeholder="Digite o fornecedor da matéria-prima">
        <span asp-validation-for="Fornecedor" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label for="unidade">Unidade</label>
        <input type="text" asp-for="Unidade" class="form-control" placeholder="Digite a unidade da matéria-prima">
        <span asp-validation-for="Unidade" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label for="pecasPorUnidade">Preço</label>
        <input type="number" asp-for="Preco" class="form-control" placeholder="Digite o preço da matéria-prima">
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary btn-block">Editar</button>
    <a class="btn btn-secondary btn-block" asp-controller="MateriaPrima" asp-action="Index" role="button">Voltar</a>
</form>