@model Producao_MVC.Responses.FormaResponse

@{
    ViewData["Title"] = "Inativar Forma";
}

<div class="text">
    <h3>Realmente deseja inativar a forma (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Forma" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Forma" asp-action="Inativar" asp-route-id="@Model.Id">Confirmar exclusão</a>